<div ng-app="fileSystemApp">
    <div id="content" ng-controller="fileSystemController">
        <div id="table">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Less 10MB</th>
                        <th>10Mb-100MB</th>
                        <th>More 100MB</th>
                    </tr>
                </thead>
                <tbody id="sizes">
                    <tr>
                        <td>{{smallSize}}</td>
                        <td>{{middleSize}}</td>
                        <td>{{largeSize}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <br /><br />
        <input type="hidden" data-item="@Guid.Empty" id="root"/>
        <span><b>Current path: </b>{{fullName}}</span><br/><br/>
        <a href="#" data-item="{{parentId}}" ng-click="goInside($event)" id="parent" class="hidden">..</a><br />
        <div ng-repeat="item in fileSystemItems.directories">
            <a href="#" data-item="{{item.id}}" ng-click="goInside($event)">{{item.name}}</a><br/>
        </div>
        <div ng-repeat="item in fileSystemItems.files">
            <span>{{item.name}}</span><br />
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript" src="~/Scripts/angular.min.js"></script>
    <script type="text/javascript" src="~/Scripts/api.angular.js"></script>
}
